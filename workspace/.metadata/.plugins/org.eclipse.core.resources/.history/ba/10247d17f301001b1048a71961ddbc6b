	Scanner sc;
	
	// constructor
	public WeekScheduler(int nthWeek) {
		this.nthWeek = nthWeek;
		// week 배열의 길이 결정하기
		// Day 객체 7개 생성해 두기
		// sc 생성해 두기
		week = new Day[7];
		for(int i=0; i<week.length; i++) {
			week[i] = new Day();	// Day 객체 7개(스케줄이 없는) 생성해 둠
		}
		sc = new Scanner(System.in);
	}	
		// method
		

package ex02_quiz;

import java.util.Scanner;

public class Quiz01 {

	public static void main(String[] args) {
		
		// 문제. 국어, 영어 점수를 사용자로 부터 입력 받아서,
		// 평균을 출력하시오.
		
		Scanner sc = new Scanner(System.in);
		
		int kor = sc.nextInt();
		int eng = sc.nextInt();
		int avg = (kor + eng)/2;
		
		System.out.println(avg + "점");
		
	}

}

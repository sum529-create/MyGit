package ex01_oop;

class Watch{
	int hour, hour2, hour3, hour4;
	int minute, minute2, minute3;
	int second;

	public Watch(int hour, int minute, int second) {
		this.hour = hour;
		this.minute = minute;
		this.second = second;
	}

	public void addHour(int hour) {
		this.hour2 = hour % 24;
		
		
	}

	public void addMinute(int minute) {
		this.hour3 = minute / 60;
		this.minute2 = minute % 60;
		
	}

	public void addSecond(int second) {
		this.hour4 = (second / 60)/60;
		this.minute3 = this.hour % 60;
		this.second = (second/60) % 60;
		
	}

	public void see() {
		System.out.println((hour+hour2+hour3+hour4) + "시 " + (minute+minute2+minute3) + "분 " + second + "초");
	}
	
}

public class Ex01_Watch {

	public static void main(String[] args) {
		
		Watch watch = new Watch(16, 15, 30);
		
		watch.addHour(25);	// 25시간 후	(1시간)
		watch.addMinute(61);	// 61분 후 (1시간 1분)
		watch.addSecond(3661);	// 3661초 후 (1시간 1분 1초)
		
		watch.see();	// 19시 17분 31초
	}

}

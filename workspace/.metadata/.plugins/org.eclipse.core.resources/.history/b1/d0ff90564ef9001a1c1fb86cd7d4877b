package ex03_loop;

public class Ex03_for {

	public static void main(String[] args) {
		
		/*
		 * for문
		 * 1. 반복되는 값의 범위가 명확할 때 사용
		 * 2. 주로 배열에서 사용
		 * 3. 형식
		 * 		for(초기값 ;조건식 ; 증감문){
		 * 			반복실행문;
		 * 		}
		 */
		
		// 1. 1 ~ 3
		for(int a = 1; a<= 3; a++) {
			System.out.println(a);
		}
		
		// 2. 3 ~ 1
		for(int b = 3; b>=3; b--) {
			System.out.println(b);
		}

	}

}

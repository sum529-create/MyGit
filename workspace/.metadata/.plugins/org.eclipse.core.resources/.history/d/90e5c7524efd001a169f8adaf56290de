package ex02_user_type;

public class Book {
	String title;
	String author;
	int price;
	int amount;
	boolean isBestSeller;
	
	// method
	// 1. 필드 정보 출력 메소드
	// 		1) 결과타입 : void
	//		2) 메소드명 : print
	//		3) 매새변수 : 없음
	
	void print() {
		System.out.println("책 제목 : " + title + "\n책 저자 : " + author + "\n책 가격 : " + price + "\n판매량 : " + amount + "권\n" + isBestSeller != null ? "베스트 셀러" : "일반서적");
	}
}

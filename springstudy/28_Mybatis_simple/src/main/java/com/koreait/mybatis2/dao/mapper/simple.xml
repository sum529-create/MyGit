<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koreait.mybatis2.dao.SimpleDao">


	<!-- 최신 NO가 위로 올라오는 순서로 정렬한 테이블 : A -->
	<!-- 정렬된 테이블에 행 번호(beginRecord와 endRecord의 조건으로 사용)를 추가한 테이블 : B -->
	<select id="simpleList" resultType="com.koreait.mybatis2.dto.SimpleDto">
		SELECT B.*
		  FROM ((SELECT ROWNUM AS RN, A.*
		  			FROM (SELECT *
		  					FROM SIMPLE
		  				   ORDER BY NO DESC)A )B )
		  	WHERE B.RN BETWEEN #{param1} AND #{param2}
	</select>
	
	<select id="totalRecord" resultType="int">
		SELECT COUNT(*)
		  FROM SIMPLE
	</select>
	<!-- dao이름 -->
	<insert id="simpleInsert">
		INSERT INTO
			SIMPLE (NO, WRITER, TITLE, CONTENT, REGDATE) 
			VALUES(SIMPLE_SEQ.NEXTVAL, #{param1}, #{param2}, #{param3}, SYSDATE)
	</insert>
	
	<select id="simpleView" parameterType="int"  resultType="com.koreait.mybatis2.dto.SimpleDto">
		SELECT * FROM SIMPLE WHERE NO = #{no} 
	</select> <!-- ${no}도 가능함 but 숫자라고 $쓸필요는 없다. -->
	
	<update id="simpleUpdate">
		UPDATE SIMPLE SET TITLE = #{param1}, CONTENT = #{param2} WHERE NO = #{param3}
	</update>
	
	<delete id="simpleDelete" parameterType="int">
		DELETE FROM SIMPLE WHERE NO = #{no}
	</delete>
	
</mapper>